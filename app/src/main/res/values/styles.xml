<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#002947</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Custom Text Style -->
    <style name="CustomTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#015593</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/navyblue</item>
        <item name="colorAccent">@color/babyBlue</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/navyblue</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- TextView Style -->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- TextView Label Style -->
    <style name="TextViewLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quando</item>
        <item name="android:textColor">@color/navyblue</item>
    </style>

    <!-- TextView Value Style -->
    <style name="TextViewValueStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Total Cost Label Style -->
    <style name="TotalCostLabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/quando</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!-- My Button Style -->
    <style name="MyButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/navyblue</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Custom Main Button Style -->
    <style name="CustomMainButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#D1F5FF</item>
        <item name="android:textColor">#002947</item>
    </style>

    <!-- Custom Text Details Style -->
    <style name="CustomTextDetailsStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/alike_angular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Admin Button Style -->
    <style name="CustomAdminButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#002947</item>
        <item name="android:fontFamily">@font/alike_angular</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
